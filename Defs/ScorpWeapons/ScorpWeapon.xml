<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>MeleeWeapon_ScorpSpear</defName>
    <label>ScorpSpear</label>
    <description>Used to thrust the will of their oppents.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/Ikwa</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <techLevel>Neolithic</techLevel>
    <weaponTags>
      <li>ScorpPike</li>
    </weaponTags>
    <weaponClasses>
      <li>Neolithic</li>
    </weaponClasses>
    <costStuffCount>50</costStuffCount>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>1.1</Mass>
    </statBases>
    <equippedAngleOffset>-25</equippedAngleOffset>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Revolver</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>12</range>
        <soundCast>Scorp_Spear_Wind</soundCast>
        <muzzleFlashScale>1</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>13</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
  


