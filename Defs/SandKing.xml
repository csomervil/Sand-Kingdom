      <LeatherAmount>75</LeatherAmount>
      <RoyalFavorValue>3</RoyalFavorValue>
    </statBases>
    <tools>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.2</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightPincer</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
